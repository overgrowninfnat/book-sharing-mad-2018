<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_centerInParent="true"
        app:cardCornerRadius="15dp"
        android:elevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_a_new_account"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">

                <EditText
                    android:id="@+id/registerNameEditText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                    android:ems="10"
                    android:background="#11000000"
                    android:drawableLeft="@drawable/ic_action_account_black"
                    android:hint="@string/display_name"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/registerEmailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:background="#11000000"
                    android:drawableLeft="@drawable/ic_action_email_black"
                    android:hint="@string/email"
                    android:textColorHint="@android:color/darker_gray"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:inputType="textEmailAddress"/>

                <EditText
                    android:id="@+id/registerPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:background="#11000000"
                    android:hint="@string/password"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:drawableLeft="@drawable/ic_action_password_black"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:inputType="textPassword"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/loginCardView"
                    android:onClick="createUserButtonPressed"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp"
                    android:elevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/create_user"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>