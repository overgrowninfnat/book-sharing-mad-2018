<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.RegisterActivity"
    android:background="@drawable/gradient">

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="420dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_centerInParent="true"
        app:cardCornerRadius="14dp"
        android:elevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create a New Account"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/registerNameEditText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_account_black"
                android:hint="Display Name"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@android:color/black"
                android:inputType="text"/>
            <EditText
                android:id="@+id/registerEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_email_black"
                android:hint="Email"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:inputType="textEmailAddress"/>
            <EditText
                android:id="@+id/registerPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_password_black"
                android:hint="Password"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:inputType="textPassword"/>

            <android.support.v7.widget.CardView
                android:id="@+id/loginCardView"
                android:onClick="createUserButtonPressed"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="20dp"
                android:elevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create User"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>